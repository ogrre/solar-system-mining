APP_NAME="Solar System Mining"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8082

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4
PHP_IMAGE=solar-system-mining/app:latest

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuration de la base de donn√©es (interne aux conteneurs)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=solar_system_mining
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_ROOT_PASSWORD=root_secret
DB_PORT_EXTERNAL=5433

# Configuration de session et cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=ssm_cache

# Redis configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_PORT_EXTERNAL=6380

# Mail configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@solar-system-mining.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Ports pour les services Docker
NGINX_PORT=8082
PMA_PORT=8083

# Configuration Kafka
KAFKA_HOST=kafka
KAFKA_PORT=9092
KAFKA_PORT_EXTERNAL=9092
KAFKA_UI_PORT=8084
ZOOKEEPER_PORT=2181

# Configuration Sentry
SENTRY_LARAVEL_DSN=

# Database administration tool (adminer or phpmyadmin)
DB_ADMIN=adminer

# Change linux/amd64 to linux/amd64 for ARM machines
DB_ADMIN_PLATFORM=linux/amd64
