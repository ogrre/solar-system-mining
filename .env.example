# Application
APP_NAME="Solar System Mining"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://solar-system-mining.local
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=postgres
DB_PASSWORD=secret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Kafka
KAFKA_BROKER=kafka:9092

# Debugging
XDEBUG_MODE=develop,debug
PHP_IDE_CONFIG=serverName=docker

# Docker Platform (auto-detection par défaut, ou forcez avec linux/amd64 ou linux/arm64)
DOCKER_PLATFORM=

# Docker-specific (no need to modify)
NGINX_PORT=8082
DB_PORT_EXTERNAL=5433
REDIS_PORT_EXTERNAL=6380
KAFKA_PORT_EXTERNAL=9093
KAFKA_UI_PORT=8085
ZOOKEEPER_PORT=2181

MAILHOG_PORT=8025
# Sessions
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=redis

# Queue
QUEUE_CONNECTION=redis

# Sentry
SENTRY_DSN=

# Performance des volumes (cached pour macOS, delegated ou défaut pour Windows/Linux)  
VOLUME_OPTIONS=cached

# User/Group IDs (automatique sur macOS/Linux, peut nécessiter ajustement sur Windows)
UID=1000
GID=1000
